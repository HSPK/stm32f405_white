{
  "version": "2.0.0",

  "tasks": [
    {
      "label": "start",
      "type": "shell",
      "command": "make -j4; openocd -f interface/jlink.cfg -c 'transport select swd' -f target/stm32f4x.cfg",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "."
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "stop",
      "command": "echoÂ ${input:terminate}",
      "type": "shell"
    }
  ],

  "inputs": [
    {
      "id": "terminate",

      "type": "command",

      "command": "workbench.action.tasks.terminate",

      "args": "terminateAll"
    }
  ]
}
